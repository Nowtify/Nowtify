<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@android:color/white">

    <!--Offer image-->
    <ImageView
        android:id="@+id/entity_item_image"
        android:layout_height="220dp"
        android:layout_width="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@drawable/coffee"/>

    <TextView
        android:id="@+id/entity_item_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:text="1 For 1 Venti Frappachino"
        android:layout_marginRight="40dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_below="@id/entity_item_image"
        android:layout_centerHorizontal="false" />

    <TextView
        android:id="@+id/entity_parent_name"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:textColor="@color/dark_grey"
        android:text="Starbucks"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:layout_below="@id/entity_item_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/entity_item_distance"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="30 m"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:background="#4D000000"
        />



