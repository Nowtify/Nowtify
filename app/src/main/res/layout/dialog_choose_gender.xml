<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RadioButton
        android:id="@+id/radio_male_button"
        android:text="Male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_add_meal"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey" />

    <RadioButton
        android:id="@+id/radio_female_button"
        android:text="Female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_add_meal"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:layout_below="@+id/radio_male_button" />

    <RadioButton
        android:id="@+id/radio_not_applicable_gender"
        android:text="Not Applicable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_add_meal"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="textCapWords"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_grey"
        android:layout_below="@+id/radio_female_button"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_not_applicable_gender"
        android:layout_centerInParent="true"
        android:text="OK" />

</RelativeLayout>
